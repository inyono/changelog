{
  "name": "@splish-me/changelog",
  "version": "0.1.0",
  "homepage": "https://github.com/splish/changelog",
  "bugs": {
    "url": "https://github.com/splish/changelog/issues"
  },
  "license": "MIT",
  "author": "Splish UG (haftungsbeschr√§nkt)",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "repository": "splish/changelog",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "splish-microbundle --target=node --format cjs",
    "changelog": "ts-node --compilerOptions '{\"module\": \"commonjs\"}' scripts/changelog",
    "format": "prettier --write \"{{__tests__,src}/**/*,*}.{js,jsx,ts,tsx,css,scss,sass,less,json,md,markdown,yaml,yml}\"",
    "test": "jest",
    "deploy-commit": "git commit -am \"chore: release $npm_package_version\"",
    "deploy-tag": "git tag --force $npm_package_version",
    "predeploy": "npm-run-all --sequential format build changelog deploy-commit deploy-tag",
    "deploy": "yarn publish"
  },
  "dependencies": {
    "nodegit": "^0.24.0",
    "prettier": "^1.0.0",
    "remark-parse": "^6.0.0",
    "remark-stringify": "^6.0.0",
    "unified": "^7.0.0"
  },
  "devDependencies": {
    "@splish-me/microbundle": "^0.9.0",
    "@types/jest": "^23.0.0",
    "@types/mdast": "^3.0.0",
    "@types/nodegit": "^0.22.0",
    "jest": "^23.0.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^2.0.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
