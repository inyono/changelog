{
  "name": "@inyono/changelog",
  "version": "0.1.5",
  "homepage": "https://github.com/inyono/changelog",
  "bugs": {
    "url": "https://github.com/inyono/changelog/issues"
  },
  "license": "MIT",
  "author": "Jonas Keinholz <jonas@keinholz.dev>",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "repository": "splish/changelog",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsdx build --target node --format cjs --tsconfig tsconfig.prod.json",
    "changelog": "ts-node --compiler-options '{\"module\": \"commonjs\"}' scripts/changelog",
    "format": "prettier --write \"{{__tests__,src}/**/*,*}.{js,jsx,ts,tsx,css,scss,sass,less,json,md,markdown,yaml,yml}\"",
    "lint": "tsc --noEmit",
    "test": "jest",
    "deploy-commit": "git commit -am \"chore: release $npm_package_version\"",
    "deploy-tag": "git tag --force $npm_package_version",
    "predeploy": "npm-run-all --sequential format build changelog deploy-commit deploy-tag",
    "deploy": "yarn publish --new-version $npm_package_version"
  },
  "dependencies": {
    "@types/mdast": "^3.0.0",
    "nodegit": "^0.27.0",
    "prettier": "^2.0.0",
    "remark-parse": "^9.0.0",
    "remark-stringify": "^9.0.0",
    "unified": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/nodegit": "^0.26.0",
    "jest": "^26.0.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^9.0.0",
    "tsdx": "^0.14.0",
    "typescript": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
